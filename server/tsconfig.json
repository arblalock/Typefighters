{
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext",
      "target": "ESNext"
    }
  },
  "compilerOptions": {
    "outDir": "./build",
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "paths": {
      "@/*": [
        "./src/*",
        "../common/*",
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../common/types.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}